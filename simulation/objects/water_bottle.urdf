<?xml version="1.0"?>
<robot name="water_bottle">

  <material name="water">
    <color rgba="0.24 0.77 0.78 1" />
  </material>

  <link name="bottle">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.046" length="0.165"/>
      </geometry>
      <material name="water"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.046" length="0.165"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.53"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <link name="cap">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
      <material name="water"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.0002" ixy="0" ixz="0"
               iyy="0.0002" iyz="0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="bottle_to_cap" type="fixed">
    <parent link="bottle"/>
    <child link="cap"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>
