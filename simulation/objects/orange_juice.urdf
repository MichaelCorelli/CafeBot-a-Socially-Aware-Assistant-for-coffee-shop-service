<?xml version="1.0"?>
<robot name="orange_juice">

  <material name="orange">
    <color rgba="0.98 0.57 0.027 1" />
  </material>

  <link name="bottle">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.16"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.16"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.52"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <link name="cap">
    <visual>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.0002" ixy="0" ixz="0"
               iyy="0.0002" iyz="0"
               izz="0.0002"/>
    </inertial>
  </link>

  <joint name="bottle_to_cap" type="fixed">
    <parent link="bottle"/>
    <child link="cap"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>

