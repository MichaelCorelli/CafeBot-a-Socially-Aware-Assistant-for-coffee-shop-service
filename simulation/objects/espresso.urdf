<?xml version="1.0"?>
<robot name="espresso">

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="cup">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.05"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.05"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
  </link>

  <link name="handle">
    <visual>
      <origin xyz="0.03 0 0.05" rpy="0 0 1.57"/>
      <geometry>
        <cylinder radius="0.004" length="0.03"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0.03 0 0.05" rpy="0 0 1.57"/>
      <geometry>
        <cylinder radius="0.004" length="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.02"/>
      <origin xyz="0.03 0 0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0"
               izz="0.0001"/>
    </inertial>
  </link>

  <joint name="cup_to_handle" type="fixed">
    <parent link="cup"/>
    <child link="handle"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
