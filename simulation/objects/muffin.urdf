<?xml version="1.0"?>
<robot name="muffin">

  <material name="paper_color">
    <color rgba="0.68 0.88 0.85 1" />
  </material>

  <material name="muffin_color">
    <color rgba="0.68 0.42 0 1" />
  </material>

    <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base">
    <visual>
      <origin xyz="0 0 0.02"/>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="paper_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.02"/>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.02"/>
      <mass value="0.03"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0"
               izz="0.0001"/>
    </inertial>
  </link>

  <link name="top">
    <visual>
      <origin xyz="0 0 0.07"/>
      <geometry>
        <cylinder radius="0.045" length="0.04"/>
      </geometry>
      <material name="muffin_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.07"/>
      <geometry>
        <cylinder radius="0.045" length="0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.07"/>
      <mass value="0.04"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0"
               izz="0.0001"/>
    </inertial>
  </link>

      <link name="plate_bottom">
  <visual>
    <origin xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.01"/>
    </geometry>
    <material name="white"/>
  </visual>

  <collision>
    <origin xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.01"/>
    </geometry>
  </collision>
  
  <inertial>
    <origin xyz="0 0 0"/>
    <mass value="0.05"/>
    <inertia ixx="0.0001" ixy="0" ixz="0"
             iyy="0.0001" iyz="0"
             izz="0.0001"/>
  </inertial>
</link>

<link name="plate_top">
  <visual>
    <origin xyz="0 0 0.012"/>
    <geometry>
      <cylinder radius="0.1" length="0.004"/>
    </geometry>
    <material name="white"/>
  </visual>

  <collision>
    <origin xyz="0 0 0.012"/>
    <geometry>
      <cylinder radius="0.1" length="0.004"/>
    </geometry>
  </collision>

  <inertial>
    <origin xyz="0 0 0"/>
    <mass value="0.03"/>
    <inertia ixx="0.00005" ixy="0" ixz="0"
             iyy="0.00005" iyz="0"
             izz="0.00005"/>
  </inertial>
</link>

  <joint name="top_to_base" type="fixed">
    <parent link="base"/>
    <child link="top"/>
    <origin xyz="0 0 0"/>
  </joint>

      <joint name="plate_joint" type="fixed">
  <parent link="plate_bottom"/>
  <child link="plate_top"/>
  <origin xyz="0 0 0"/>
</joint>

<joint name="plate_to_base" type="fixed">
  <parent link="plate_top"/>
  <child link="base"/>
  <origin xyz="0 0 0"/>
</joint>

</robot>
