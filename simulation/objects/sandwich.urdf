<?xml version="1.0"?>
<robot name="sandwich">

  <material name="bread_color">
    <color rgba="0.76 0.53 0.15 1"/>
  </material>

  <material name="lettuce_color">
    <color rgba="0.2 0.87 0.27 1"/>
  </material>

  <material name="burger_color">
    <color rgba="0.5 0.25 0 1"/>
  </material>

    <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="bottom_bread">
    <visual>
      <origin xyz="0 0 0.02"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="bread_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.025"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0"
               iyy="0.0001" iyz="0"
               izz="0.0001"/>
    </inertial>
  </link>

  <link name="lettuce">
    <visual>
      <origin xyz="0 0 0.03"/>
      <geometry>
        <cylinder radius="0.052" length="0.01"/>
      </geometry>
      <material name="lettuce_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.025"/>
      <geometry>
        <cylinder radius="0.052" length="0.01"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0"
               iyy="0.00001" iyz="0"
               izz="0.00001"/>
    </inertial>
  </link>

  <link name="burger_patty">
    <visual>
      <origin xyz="0 0 0.04"/>
      <geometry>
        <cylinder radius="0.045" length="0.015"/>
      </geometry>
      <material name="burger_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.035"/>
      <geometry>
        <cylinder radius="0.045" length="0.015"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.03"/>
      <inertia ixx="0.00003" ixy="0" ixz="0"
               iyy="0.00003" iyz="0"
               izz="0.00003"/>
    </inertial>
  </link>

  <link name="top_bread">
    <visual>
      <origin xyz="0 0 0.055"/>
      <geometry>
        <cylinder radius="0.055" length="0.01"/>
      </geometry>
      <material name="bread_color"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder radius="0.055" length="0.01"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.04"/>
      <inertia ixx="0.00004" ixy="0" ixz="0"
               iyy="0.00004" iyz="0"
               izz="0.00004"/>
    </inertial>
  </link>

    <link name="plate_bottom">
  <visual>
    <origin xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.01"/>
    </geometry>
    <material name="white"/>
  </visual>

  <collision>
    <origin xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.01"/>
    </geometry>
  </collision>

  <inertial>
    <origin xyz="0 0 0"/>
    <mass value="0.05"/>
    <inertia ixx="0.0001" ixy="0" ixz="0"
             iyy="0.0001" iyz="0"
             izz="0.0001"/>
  </inertial>
</link>

<link name="plate_top">
  <visual>
    <origin xyz="0 0 0.012"/>
    <geometry>
      <cylinder radius="0.1" length="0.004"/>
    </geometry>
    <material name="white"/>
  </visual>

  <collision>
    <origin xyz="0 0 0.012"/>
    <geometry>
      <cylinder radius="0.1" length="0.004"/>
    </geometry>
  </collision>
  
  <inertial>
    <origin xyz="0 0 0"/>
    <mass value="0.03"/>
    <inertia ixx="0.00005" ixy="0" ixz="0"
             iyy="0.00005" iyz="0"
             izz="0.00005"/>
  </inertial>
</link>

  <joint name="bread_to_lettuce" type="fixed">
    <parent link="bottom_bread"/>
    <child link="lettuce"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="lettuce_to_patty" type="fixed">
    <parent link="lettuce"/>
    <child link="burger_patty"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="patty_to_top" type="fixed">
    <parent link="burger_patty"/>
    <child link="top_bread"/>
    <origin xyz="0 0 0"/>
  </joint>

    <joint name="plate_joint" type="fixed">
  <parent link="plate_bottom"/>
  <child link="plate_top"/>
  <origin xyz="0 0 0"/>
</joint>

<joint name="plate_to_bottom_bread" type="fixed">
  <parent link="plate_top"/>
  <child link="bottom_bread"/>
  <origin xyz="0 0 0"/>
</joint>

</robot>
