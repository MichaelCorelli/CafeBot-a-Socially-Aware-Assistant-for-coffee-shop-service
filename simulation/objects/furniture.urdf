<?xml version="1.0"?>
<robot name="furniture">

  <material name="brown" >
    <color rgba="0.396078431372549 0.21568627450980393 0 1" />
  </material>

  <link name="center">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <box size="0.6 3.8 1"/>
      </geometry>
      <material name="brown"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <box size="0.6 3.8 1"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="10.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.005"/>
    </inertial>
  </link>

  <link name="top">
    <visual>
      <origin xyz="0 0 1"/>
      <geometry>
        <box size="0.8 4 0.05"/>
      </geometry>
      <material name="brown"/>
    </visual>

    <collision>
      <origin xyz="0 0 1"/>
      <geometry>
        <box size="0.8 4 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <link name="low">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.8 4 0.05"/>
      </geometry>
      <material name="brown"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.8 4 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="center_to_top" type="fixed">
    <parent link="center"/>
    <child link="top"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <joint name="center_to_low" type="fixed">
    <parent link="center"/>
    <child link="low"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

</robot>
