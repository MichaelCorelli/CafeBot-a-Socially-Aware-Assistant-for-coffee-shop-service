<?xml version="1.0" ?>
<robot name="wall_with_door">

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0"
              iyy="0" iyz="0"
              izz="0"/>
    </inertial>
  </link>

  <link name="left_wall">
    <visual>
      <origin xyz="-4.25 0 1.5"/>
      <geometry>
        <box size="7.5 0.2 3"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="-4.25 0 1.5"/>
      <geometry>
        <box size="7.5 0.2 3"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="-4.75 0 1.5"/>
      <mass value="20.0"/>
      <inertia ixx="0.06" ixy="0" ixz="0"
              iyy="0.06" iyz="0"
              izz="0.06"/>
    </inertial>
  </link>

  <link name="right_wall">
    <visual>
      <origin xyz="4.25 0 1.5"/>
      <geometry>
        <box size="7.5 0.2 3"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="4.25 0 1.5"/>
      <geometry>
        <box size="7.5 0.2 3"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="4.75 0 1.5"/>
      <mass value="20.0"/>
      <inertia ixx="0.06" ixy="0" ixz="0"
              iyy="0.06" iyz="0"
              izz="0.06"/>
    </inertial>
  </link>

  <link name="top_wall">
    <visual>
      <origin xyz="0 0 2.5"/>
      <geometry>
        <box size="2 0.2 1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 2.5"/>
      <geometry>
        <box size="2 0.2 1"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 2.5"/>
      <mass value="5.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <joint name="joint_left" type="fixed">
    <parent link="base_link"/>
    <child link="left_wall"/>
  </joint>

  <joint name="joint_right" type="fixed">
    <parent link="base_link"/>
    <child link="right_wall"/>
  </joint>

  <joint name="joint_top_wall" type="fixed">
    <parent link="base_link"/>
    <child link="top_wall"/>
  </joint>

</robot>
