    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.4"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.005"/>
    </inertial>
  </link>

  <link name="leg_3">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.4"/>
      </geometry>
      <material name="brown"/>
