<?xml version="1.0"?>
<robot name="chair">

  <material name="brown" >
    <color rgba="0.4 0.25 0.07 1" />
  </material>

  <link name="seat">
    <visual>
      <origin xyz="0 0 0.4"/>
      <geometry>
        <box size="0.3 0.3 0.05"/>
      </geometry>
      <material name="brown"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.4"/>
      <geometry>
        <box size="0.3 0.3 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>
  </link>

  <link name="leg_1">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.4"/>
