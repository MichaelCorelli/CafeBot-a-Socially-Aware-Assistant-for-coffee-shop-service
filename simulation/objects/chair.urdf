  <joint name="seat_to_leg_1" type="fixed">
    <parent link="seat"/>
    <child link="leg_1"/>
    <origin xyz="0.1 0.1 0.2" rpy="0 0 0"/>
  </joint>

  <joint name="seat_to_leg_2" type="fixed">
    <parent link="seat"/>
    <child link="leg_2"/>
    <origin xyz="-0.1 0.1 0.2" rpy="0 0 0"/>
